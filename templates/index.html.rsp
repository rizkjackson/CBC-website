<%@include file="config.rsp"%>
<%@ifeq page=""%>
<%@string label="${site_acronym}"%>
<%@else%>
<%@string label="${site_acronym}: ${page}"%>
<%@endif%>
<%@meta title="${label}"%>
<%@meta author="Henrik Bengtsson"%>
<%@string bootstrap_url="http://netdna.bootstrapcdn.com/bootstrap/3.1.1"%>
<%@string jquery_url="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0"%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="author" content="<%@meta name="author"%>">
  <link rel="shortcut icon" href="<%=pathToRoot%>assets/ico/favicon.ico">
  <title><%@meta name="title"%></title>
  <%-- Include the Bootstrap stylesheets --%>
  <link href="<%@string name="bootstrap_url"%>/css/bootstrap.min.css" rel="stylesheet">
  <%-- Custom styles for this template --%>
  <link href="<%=pathToRoot%>assets/css/navbar-fixed-top.css" rel="stylesheet">
  <link href="<%=pathToRoot%>assets/css/navbar-sticky-bottom.css" rel="stylesheet">
</head>
<body>
<%----------------------------------------------------------------------------
 HEADER
 ----------------------------------------------------------------------------%>
<%@include file="navigator.html.rsp"%>

<%----------------------------------------------------------------------------
 BODY
 ----------------------------------------------------------------------------%>
<div id="wrap">

<div class="container">
<%@ifeq page=""%>
  <div class="jumbotron">
    <div class="media">
      <a class="pull-left" href="#">
        <img src="<%@string name="site_image"%>" 
             class="img-rounded img-responsive"
             style="max-height: 200px; margin-right: 40px; margin-bottom: 20px"
             alt="Core members">
      </a>
      <h2>
       <%@string name="site_name"%> (<%@string name="site_acronym"%>)
       <%@ifneq site_motto=""%>
         <br><small><%@string name="site_motto"%></small>
       <%@endif%>
      </h2>
      <%@include content="${body}"%>
    </div>
  </div>

  <%-- GRID NAVIGATION --%>
  <%@include file="navigator-grid.html.rsp"%>
<%@else%>
  <%@include content="${body}"%>
<%@endif%>
</div>

  <div id="push"></div>
</div>

<%----------------------------------------------------------------------------
 FOOTER
 ----------------------------------------------------------------------------%>
<div id="footer" style="height: auto;">
  <div class="container">
    <%@include file="footer.html.rsp"%>
  </div>
</div>
  <%--- Bootstrap core JavaScript ---%>
  <%--- Placed at the end of the document so the pages load faster ---%>
  <script src="<%@string name="jquery_url"%>/jquery.min.js"></script>
  <script src="<%@string name="bootstrap_url"%>/js/bootstrap.min.js"></script>
  <%-- <%@include file="link-annotation.html.rsp"%> --%>
  <%-- <%@include file="google-analytics.html.rsp"%> --%>
  <%-- Include any extras that the page wish to add to the end --%>
  <%@if test="exists" name="footer_tail"%>
    <%@string name="footer_tail"%><%@string footer_tail=""%>
  <%@endif%>
</body>
</html>
